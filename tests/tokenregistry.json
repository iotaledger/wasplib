      "incoming": {"#mint": "#token1", "#token1": 1},
      "params": {
        "description": "My very valuable token"
      },
      "additionalRequests": [
        {
          "timestamp": 20201027172139,
          "caller": "@caller2",
          "function": "mint_supply",
